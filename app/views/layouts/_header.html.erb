<%= nav_bar fixed: :top, responsive: true, brand: "Cut Down Records", style: "color: #b71c1c;" do %>
    <%= menu_group do %>
        <%= menu_item "Home", root_path, :class => "nav-link", style: "color: #b71c1c;" %>
        <%= menu_item "Contattaci", contattaci_path, :class => "nav-link", style: "color: #b71c1c;" %>
        <%= menu_item "I Nostri Lavori", production_path, :class => "nav-link", style: "color: #b71c1c;" %>
        <%= menu_item "Dove Siamo", dovesiamo_path, class: "nav-link", style: "color: #b71c1c;" %>
    <% end %>
        <%= menu_group pull: :right do %>
            <% if logged_in? %>
                <%= menu_item "Utenti", users_path, class: "nav-link", style: "color: #b71c1c;" %>
                <%= menu_divider %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" style="color: #b71c1c;" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profilo", current_user, class: "nav-link", style: "color: #b71c1c;" %></li>
              <li><%= link_to "Impostazioni", edit_user_path(current_user) , class: "nav-link", style: "color: #b71c1c;" %></li>
              <li class="divider"></li>
                <%= menu_item "Esci", logout_path, method: :delete, class: "nav-link", style: "color: #b71c1c;" %>
            <% else %>
                <%= menu_item "Accedi", login_path, class: "nav-link", style: "color: #b71c1c;" %>
            <% end %>
        <% end %>
<% end %>