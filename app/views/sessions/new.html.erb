<% provide(:title, "Accedi") %>
<div class="signup">
<div class="container">
	<div class="center">
		<h1>Accedi</h1>

		<div class="row">
		  <div class="col-sm-6 col-sm-offset-3">
		    <%= form_for(:session, url: login_path) do |f| %>

		      <%= f.label :email %>
		      <%= f.email_field :email, class: 'form-control center' %>

		      <%= f.label :password %>
		      <%= link_to "(password dimenticata?)", new_password_reset_path %>
		      <%= f.password_field :password, class: 'form-control center' %>

		            <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Ricordami</span>
      <% end %>

		      <%= f.submit "Entra", class: "btn btn-primary" %>
		    <% end %>

		    <p>Sei un nuovo utente? <%= link_to "Registrati!", signup_path %></p>
		  </div>
		</div>
	</div>
</div>
</div>